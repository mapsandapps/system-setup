{
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.bracketPairColorization.enabled": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.find.seedSearchStringFromSelection": false,
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.minimap.enabled": false,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.renderWhitespace": "boundary",
  "editor.snippetSuggestions": "top",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "extensions.ignoreRecommendations": false,
  "files.associations": {
    "*.vue": "vue"
  },
  "files.trimTrailingWhitespace": true,
  "git.openDiffOnClick": false,
  "workbench.colorTheme": "Revelation (rainglow)",
  "workbench.editor.closeEmptyGroups": false,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.value": 5,
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "window.title": "${activeEditorLong}${separator}${rootName}",
  "workbench.editor.untitled.hint": "hidden",
  "window.zoomLevel": 1,
  "git.autofetch": true,
  "editor.inlineSuggest.enabled": true,
  "todohighlight.keywords": [
    {
      "text": "TODO or TODO:", // with a regex pattern defined, this setting isn't used, but is useful as a name for this section
      "regex": {
        "pattern": "TODO[:]?"
      },
      "color": "white",
      "backgroundColor": "#27ae60", // NOTE: these colors are from https://flatuicolors.com/palette/defo
      "overviewRulerColor": "white"
    },
    {
      "text": "FIXME or FIXME:", // with a regex pattern defined, this setting isn't used, but is useful as a name for this section
      "regex": {
        "pattern": "FIXME[:]?"
      },
      "color": "white",
      "backgroundColor": "#c0392b",
      "overviewRulerColor": "white"
    },
    {
      "text": "NOTE or NOTE:", // with a regex pattern defined, this setting isn't used, but is useful as a name for this section
      "regex": {
        "pattern": "NOTE[:]?"
      },
      "color": "white",
      "backgroundColor": "#2980b9",
      "overviewRulerColor": "white"
    },
    {
      "text": "QUESTION or QUESTION:", // with a regex pattern defined, this setting isn't used, but is useful as a name for this section
      "regex": {
        "pattern": "QUESTION[:]?"
      },
      "color": "white",
      "backgroundColor": "#2980b9",
      "overviewRulerColor": "white"
    }
  ]
}
